{{- $email := promptString "Git email address for the author/committer" }}
{{- $name := promptString "Git username for the author/committer" }}

sourceDir = "{{ .chezmoi.homeDir }}/.dotfiles"
[data]
    email = "{{ $email }}"
    name = "{{ $name }}"
[diff]
    exclude = ["scripts"]
{{ if eq .chezmoi.os "linux" }}
[git]
    command = "/usr/bin/git"
{{ end }}